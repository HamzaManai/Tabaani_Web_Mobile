{% block title %}Voyage index{% endblock %}

{% block Entry %}
<div class="container">

    <div class="card card-custom gutter-b">
        <div class="card-header flex-wrap py-3">
            <div class="card-title">
                <h3 class="card-label">Trips Details
                    <span class="d-block text-muted pt-2 font-size-sm">The list of trips</span></h3>
            </div>
            <a href="{{ path('voyage_new') }}" class="btn btn-primary font-weight-bolder">
