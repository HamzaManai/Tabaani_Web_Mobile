{% extends 'template.html.twig' %}
{% block Entry %}
<div class="container">
<table class="table table-striped">
            <thead> 
       <tr><td>   {% block title %} 
             <h3><p style="color:blue;"  class="text-center"> List Influenceur </p></h3>
          {% endblock %}</td> </tr>
       </thead>

     <tbody>
           {{ form_start(form, {'attr': {'novalidate' : 'novalidate'}}) }}
        <tr><td>  
        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>
        <tr><td> <div class="form-row align-items-end" >
            <div class="col">
                {{ form_row(form.nom) }}
            </div>
          </td> </tr>
             <tr><td>  <div class="col">
                <div class="form-group">
                <button type="submit" class="btn btn-success">Rechercher</button>
                 </div>
            </div></td> </tr>
             
        </div>
    {{ form_end(form) }}
    
    </tbody>
</div>
{% if influenceurs %}
   <table id="influenceurs" class="table table-striped">
            <thead>
            <tr>
               <th>Id</th>
               <th>Nom</th>
               <th>nombre followrs</th>
               <th>Facebook</th>
               <th>Instagram</th>
            </tr>
            </thead>
            <tbody>
            {% for i in influenceurs %}
                <tr>
                    <td>{{ i.id }}</td>
                    <td>{{ i.nom }}</td>
                    <td>{{ i.nbrFollowrs }}</td>
                    <td>{{ i.FacebookPage }}</td>
                    <td>{{ i.InstagramPage }}</td>
                    <td>
                        <a href="/back-office/influenceur/detaille/{{ i.id }}" class="btn btn-dark">Détails</a>
                        <a href="/back-office/influenceur/modifier/{{ i.id }}" class="btn btn-dark">Modifier</a>
                        <a href="/back-office/influenceur/supprimer/{{ i.id }}" class="btn btn-danger"
                          onclick="return confirm('Etes-vous sûr de supprimer cet influenceur?');">Supprimer</a>
                         </td>
                </tr>
            {% endfor %}
           
            </tbody>
        </table>
 {% else %}
 <p>Aucun influenceurs</p>
 {% endif %}
</table>
{% endblock %}
