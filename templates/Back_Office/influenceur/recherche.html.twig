{% extends 'Back_Office/template.html.twig' %}
{% block Entry %}
<div class="container">

    <table id="influenceurs" class="table table-striped"> 
       <thead> 
           <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="css/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
       <tr><td>   {% block title %} 
             <h3><p style="color:blue;"  class="text-center"> Recherche Influenceur </p></h3>
          {% endblock %}</td> </tr>
       </thead>
       <tbody>
            <tr><td>  {{ form_start(form, {'attr': {'novalidate' : 'novalidate'}}) }}</td> </tr>
           <tr><td>  
                <div class="form-group">
                {{form_label(form.code,'Le code influenceur') }}</div>
                {{ form_widget(form.code,{ 'attr':{'class':'form-control'}}) }}
                {{ form_errors(form.code) }}
                </div>  
             </td> </tr>
             <tr><td>   
                <div class="form-group">
                {{form_label(form.nom,'Le nom influenceur') }}</div>
                {{ form_widget(form.nom,{ 'attr':{'class':'form-control'}}) }}
                {{ form_errors(form.nom) }}
                </div> 
              </td> </tr>
              <tr><td>  
                    <div class="form-group">
                    {{form_label(form.facebookPage,'Page facebook') }}</div>
                    {{ form_widget(form.facebookPage,{ 'attr':{'class':'form-control'}}) }}
                    {{ form_errors(form.facebookPage) }}
                    </div> 
              </td> </tr>
               <tr><td>  
                    <div class="form-group">
                    {{form_label(form.instagramPage,'Page instagram') }}</div>
                    {{ form_widget(form.instagramPage,{ 'attr':{'class':'form-control'}}) }}
                    {{ form_errors(form.instagramPage) }}
                    </div> 
              </td> </tr>
               <tr><td>  
                    <div class="form-group">
                    {{form_label(form.email,'Adresse mail') }}</div>
                    {{ form_widget(form.email,{ 'attr':{'class':'form-control'}}) }}
                    {{ form_errors(form.email) }}
                    </div> 
              </td> </tr>
           <tr><td>  <button type="submit" class="btn btn-success"><span class="fa fa-search"></span> Chercher</button></td> </tr>
           <tr><td> {{ form_end(form) }}</td>  </tr>
        </tbody>
    
   {% if influenceurs %}
       <table id="influenceurs" class="table table-striped">
            <thead>
            <tr>
               <th>Id</th>
               <th>Nom</th>
               <th>code</th>
               <th>Facebook</th>
               <th>Instagram</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for i in influenceurs %}
                <tr>
                    <td>{{ i.id }}</td>
                    <td>{{ i.nom }}</td>
                    <td>{{ i.code }}</td>
                    <td>{{ i.FacebookPage }}</td>
                    <td>{{ i.InstagramPage }}</td>
                    <td>{{ i.Email }}</td>
                    <td>
                       <a href="/back-office/influenceur/detaille/{{ i.id }}" class="btn btn-info" ><i class="fa fa-eye fa-lg"> </i> Editer</a>
                        <a href="/back-office/influenceur/modifier/{{ i.id }}" class="btn btn-warning"><i class="fa fa-pencil fa-lg"> </i> Modifier</a>
                        <a href="/back-office/influenceur/supprimer/{{ i.id }}" class="btn btn-danger"
                          onclick="return confirm('Etes-vous sÃ»r de supprimer cet influenceur?');"><i class="fa fa-trash-o fa-lg"></i> Supprimer</a>
                         </td>
                </tr>
            {% endfor %}
           
            </tbody>
         </table>

      {% endif %}
    </table>
{% endblock %}
