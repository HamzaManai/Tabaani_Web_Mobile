{% extends'Front_Office/Header-Footer.html.twig' %}

 {% block title %}
     Trips
 {% endblock %}


    {% block Content %}
        <br> <br><br><br> <br> <br>
        <section class="d-flex align-items-center dark-overlay bg-cover" style="background-image: url('{{ asset('front-office/img/photo/trip1.jpg') }}');">
            <div class="container py-6 py-lg-7 text-white overlay-content text-center">
                <div class="row">
                    <div class="col-xl-10 mx-auto">
                        <h1 class="display-3 font-weight-bold text-shadow">Tabaani Trips</h1>
                        <p class="text-lg text-shadow">Let's Go</p>
                    </div>
                </div>
            </div>
        </section>
        <div class="container">
            <div class="search-bar rounded p-3 p-lg-4 position-relative mt-n5 z-index-20">
                <form id="searchForm" action="#">
                    <div class="row">
                        <div class="col-lg-4 d-flex align-items-center form-group">
                            <input class="form-control border-0 shadow-0" type="search" name="search" placeholder="Which trip are you searching for?">

                        </div>
                        <div class="col-lg-2 form-group mb-0">
                            <button class="btn btn-primary btn-block h-100" type="submit">Search </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
<section class="py-6">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-8">
                <p class="subtitle text-primary">The latest events</p>
                <h2>What's new on Tabaani</h2>
            </div>


            <div class="text-center">
                <a class="btn btn-outline-primary btn-block" href="{{ path('reservation_new') }}">
                    <i class="far fa-paper-plane mr-2"></i>
                    Book now
                </a>
            </div>
        </div>


        <h1>Reservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FLYING FROM</th>
                <th>FLYING TO</th>
                <th>DEPARTING</th>
                <th>Return</th>
                <th>Adults</th>
                <th>Children</th>
                <th>Phone</th>
                <th>Travel Class</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.FLYINGFROM }}</td>
                <td>{{ reservation.FLYINGTO }}</td>
                <td>{{ reservation.DEPARTING ? reservation.DEPARTING|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.Retour ? reservation.Retour|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.adults }}</td>
                <td>{{ reservation.children }}</td>
                <td>{{ reservation.phone }}</td>
                <td>{{ reservation.travelClass }}</td>
                <td>
                    <a href="{{ path('reservation_show', {'id': reservation.id}) }}">show</a>
                    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reservation_new') }}">Create new</a>
    </div>
</section>
{% endblock %}
